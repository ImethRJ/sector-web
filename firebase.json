{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/robots.txt",
        "function": "ssr"
      },
      {
        "source": "/sitemap.xml",
        "function": "ssr"
      },
      {
        "source": "**",
        "function": "ssr"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" install",
        "node scripts/deploy-prep.js"
      ]
    }
  ]
}